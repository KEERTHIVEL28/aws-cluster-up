#!/bin/bash

set -eu

source $ACU_SHARE_DIR/defaults.bash

cat <<EOF
[OSEv3:children]
masters
nodes
etcd

[OSEv3:vars]
ansible_ssh_user=${ANSIBLE_SSH_USER:-ec2-user}
ansible_become=yes
deployment_type=openshift-enterprise

openshift_enable_service_catalog=false
template_service_broker_install=false
osm_use_cockpit=false
openshift_enable_excluders=false
openshift_hosted_manage_registry_console=false
osn_storage_plugin_deps=[]
openshift_disable_check=memory_availability,disk_availability,package_availability,package_version,docker_image_availability,docker_storage

openshift_install_examples=true
openshift_portal_net=172.30.0.0/16

openshift_docker_additional_registries=registry.reg-aws.openshift.com
oreg_url="registry.reg-aws.openshift.com/openshift3/ose-\${component}:\${version}"
oreg_auth_user=$(printf "%q" ${OREG_AUTH_USER:-unused})
oreg_auth_password=${OREG_AUTH_PASSWORD:-}

openshift_cloudprovider_kind=aws
openshift_cloudprovider_aws_access_key=${AWS_ACCESS_KEY:?}
openshift_cloudprovider_aws_secret_key=${AWS_SECRET_KEY:?}
openshift_clusterid=$ACU_CLUSTER_NAME

openshift_additional_repos=[{'id': 'ose', 'name': 'ose', 'baseurl': 'https://mirror.openshift.com/enterprise/enterprise-3.9/latest/RH7-RHAOS-3.9/x86_64/os/', 'enabled': 1, 'gpgcheck': 0, 'sslclientcert': '/var/lib/yum/client-cert.pem', 'sslclientkey': '/var/lib/yum/client-key.pem', 'sslverify': 0}]

openshift_master_bootstrap_auto_approve=true

[etcd]
$ACU_INVENTORY_MASTER_IP

[masters]
$ACU_INVENTORY_MASTER_IP

[nodes]
$ACU_INVENTORY_MASTER_IP openshift_node_group_name=node-config-master openshift_node_labels="{}"
$ACU_INVENTORY_INFRA_IP openshift_node_group_name=node-config-infra openshift_node_labels="{'region':'infra'}"
$ACU_INVENTORY_NODE_IP openshift_node_group_name=node-config-compute openshift_node_labels="{}"
EOF
